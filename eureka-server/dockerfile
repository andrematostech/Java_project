# Build stage
FROM maven:3.9-eclipse-temurin-17-alpine AS build
WORKDIR /build

# Copy the whole multi-module project
COPY . .

# Build only this module (+ required deps)
RUN mvn -DskipTests -pl eureka-server -am clean package

# Runtime stage
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app

COPY --from=build /build/eureka-server/target/*.jar /app/
RUN rm -f /app/*.original || true && mv /app/*.jar /app/app.jar

EXPOSE 8761
ENTRYPOINT ["java","-jar","/app/app.jar"]
